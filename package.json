{
  "name": "mcp-server-pinescript",
  "version": "3.1.0",
  "description": "AI-optimized MCP server for PineScript documentation and code review",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "node --loader ts-node/esm index.ts",
    "dev": "node --loader ts-node/esm --watch index.ts",
    "start:js": "node index.js",
    "dev:js": "node --watch index.js",
    "update-docs": "node scripts/update-docs.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:parser": "vitest run tests/parser/",
    "test:performance": "vitest run tests/parser/performance.test.js",
    "test:short-title": "vitest run tests/parser/short-title-validation.test.js",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "start:ts": "node --loader ts-node/esm index.ts",
    "dev:ts": "node --loader ts-node/esm --watch index.ts",
    "version:patch": "node scripts/version-manager.js bump patch",
    "version:minor": "node scripts/version-manager.js bump minor",
    "version:major": "node scripts/version-manager.js bump major",
    "version:check": "node scripts/version-manager.js check",
    "version:validate": "node scripts/version-manager.js validate",
    "prerelease": "npm run version:validate",
    "release:prepare": "npm run version:validate && npm run build",
    "publish:validate": "node scripts/publish-automation.js validate",
    "publish:dry-run": "node scripts/publish-automation.js dry-run",
    "publish:live": "node scripts/publish-automation.js publish",
    "prepublishOnly": "npm run publish:validate",
    "release:patch": "node scripts/release-workflow.js patch",
    "release:minor": "node scripts/release-workflow.js minor",
    "release:major": "node scripts/release-workflow.js major",
    "release:dry-run": "node scripts/release-workflow.js dry-run",
    "release:status": "node scripts/release-workflow.js status",
    "release:validate": "node scripts/release-monitor.js validate",
    "release:monitor": "node scripts/release-monitor.js monitor"
  },
  "keywords": [
    "mcp",
    "pinescript",
    "tradingview",
    "trading",
    "documentation",
    "code-review"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mendable/firecrawl-js": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "jsdom": "^26.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "index.js",
    "docs/processed/",
    "README.md",
    "USER-GUIDE.md",
    "AI-INTEGRATION.md",
    "MAINTAINER.md",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@types/node": "^24.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
