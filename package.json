{
  "name": "mcp-server-pinescript",
  "version": "3.3.5",
  "description": "AI-optimized MCP server for PineScript documentation and code review",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node --loader ts-node/esm index.ts",
    "dev": "node --loader ts-node/esm --watch index.ts",
    "start:js": "node index.js",
    "dev:js": "node --watch index.js",
    "update-docs": "node scripts/update-docs.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:parser": "vitest run tests/parser/",
    "test:performance": "vitest run tests/parser/performance.test.js",
    "test:short-title": "vitest run tests/parser/short-title-validation.test.js",
    "test:atomic": "vitest run tests/atomic/",
    "test:atomic:watch": "vitest tests/atomic/",
    "test:atomic:framework": "vitest run tests/atomic/atomic-framework.test.ts",
    "test:atomic:performance": "vitest run tests/atomic/minimal-performance.test.ts",
    "test:atomic:core": "vitest run tests/atomic/error-handler-core.test.ts",
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "build:validate": "npm run build && node -e \"import('./index.js').then(() => console.log('✅ Build validation successful')).catch(err => { console.error('❌ Build validation failed:', err.message); process.exit(1); })\"",
    "build:auto": "bash scripts/build-automation.sh",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "quality:check": "npm run type-check && npm run lint && npm run test:atomic:framework",
    "quality:fix": "npm run check:fix && npm run format:fix",
    "quality:full": "npm run quality:fix && npm run quality:check && npm run test:run",
    "ci:validate": "npm run quality:check && npm run test:run",
    "ci:build": "npm run quality:check && npm run build",
    "deploy:validate": "bash scripts/deploy-validate.sh",
    "deploy:build": "npm run build:auto",
    "deploy:prepare": "npm run deploy:build && npm run deploy:validate",
    "deploy:test": "npm run deploy:prepare && npm run test:run",
    "start:ts": "node --loader ts-node/esm index.ts",
    "dev:ts": "node --loader ts-node/esm --watch index.ts",
    "version:patch": "node scripts/version-manager.js bump patch",
    "version:minor": "node scripts/version-manager.js bump minor",
    "version:major": "node scripts/version-manager.js bump major",
    "version:check": "node scripts/version-manager.js check",
    "version:validate": "node scripts/version-manager.js validate",
    "prerelease": "npm run version:validate",
    "release:prepare": "npm run version:validate && npm run build",
    "publish:validate": "node scripts/publish-automation.js validate",
    "publish:dry-run": "node scripts/publish-automation.js dry-run",
    "publish:live": "node scripts/publish-automation.js publish",
    "prepublishOnly": "npm run publish:validate",
    "release:patch": "node scripts/release-workflow.js patch",
    "release:minor": "node scripts/release-workflow.js minor",
    "release:major": "node scripts/release-workflow.js major",
    "release:dry-run": "node scripts/release-workflow.js dry-run",
    "release:status": "node scripts/release-workflow.js status",
    "release:validate": "node scripts/release-monitor.js validate",
    "release:monitor": "node scripts/release-monitor.js monitor"
  },
  "keywords": [
    "mcp",
    "pinescript",
    "tradingview",
    "trading",
    "documentation",
    "code-review"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mendable/firecrawl-js": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "jsdom": "^26.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "index.js",
    "src/",
    "docs/processed/",
    "README.md",
    "USER-GUIDE.md",
    ".project/AI-INTEGRATION.md",
    "MAINTAINER.md",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/node": "^24.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
